@model DomainCustomer.Entities.Contact
@{
ViewBag.Title = "Fale Conosco";
Layout = "~/Views/Shared/Base/_LayoutBreadCrumbContent.cshtml";
}
@section breadcrumbs {
<div class="ui container">
   <div class="ui grid stackable middle aligned centered">
      <div class="row one column">
         <div class="column">
            <h1 class="text uppercase">@ViewBag.Title</h1>
            <div class="ui breadcrumb text small uppercase">
               <a class="section" href="/">Home</a>
               <div class="divider"> / </div>
               <span class="active section">Formulário de Contato</span>
            </div>
         </div>
      </div>
   </div>
</div>
}
<div class="ui container">
   <div class="ui column grid">
      <div class="ten wide computer sixteen wide tablet sixteen wide mobile column">
         <div class="ui segment">
            @using (Ajax.BeginForm("FaleConosco", "Customer", new AjaxOptions { HttpMethod = "POST", OnSuccess = "onSuccess", OnFailure = "onFailure" }, new { @class = "ui large form", @id = "frmCadastro" }))
            {
            @Html.AntiForgeryToken()
            <div class="field">
               <div class="ui left icon input">
                  <i class="user icon"></i>
                  <input type="text" name="nome" id="nome" onkeyup="MostrarValores('nome')" placeholder="Seu Nome">
               </div>
            </div>
            <div class="div two fields">
               <div class="field">
                  <div class="ui left icon input">
                     <i class="envelope icon"></i>
                     <input type="text" name="email" id="email" onkeyup="MostrarValores('email')" placeholder="Seu E-mail">
                  </div>
               </div>
               <div class="field">
                  <div class="ui left icon input">
                     <i class="phone square icon"></i>
                     <input type="text" name="telefone" id="telefone" onkeyup="MostrarValores('telefone')" placeholder="(00) 00000-0000" class="masked mask_phone">
                  </div>
               </div>
            </div>
            <div class="field">
               <div class="ui left icon input">
                  <i class="bullhorn icon"></i>
                  <input type="text" name="assunto" id="assunto" onkeyup="MostrarValores('assunto')" placeholder="Assunto">
               </div>
            </div>
            <div class="field">
               <div class="ui left icon input">
                  <textarea maxlength="6000" name="mensagem" id="mensagem" onkeyup="MostrarValores('mensagem')" placeholder="Mensagem"></textarea>
               </div>
            </div>
            <div class="div two fields">
               <div class="ui fluid button large basic left" onclick="AbrirModal()">Listar Dados</div>
               <div class="ui fluid large teal submit button primary">Enviar</div>
            </div>
            <div class="ui error message"></div>
            }
         </div>
      </div>
      <div class="six wide computer sixteen wide tablet sixteen wide mobile column">
         <div class="ui segment">
            <div class="field">
               Nome: <span id="m_nome"></span>
            </div>
            <div class="field">
               Email: <span id="m_email"></span>
            </div>
            <div class="field">
               Telefone: <span id="m_telefone"></span>
            </div>
            <div class="field">
               Assunto: <span id="m_assunto"></span>
            </div>
            <div class="field">
               Mensagem: <span id="m_mensagem"></span>
            </div>
         </div>
      </div>
   </div>
   <div class="ui longer test modal">
      <div class="header">
         Listar mensagens recebidas
      </div>
      <div class="scrolling image content">
         <div class="description">
            <div class="ui header">Mensagens</div>
            <table id="tbMostrarFormulario" width='100%'>
            </table>
         </div>
      </div>
      <div class="actions">
         <div class="ui primary approve button">
            Voltar
            <i class="right chevron icon"></i>
         </div>
      </div>
   </div>
</div>
<script></script>
<script>
   $(document)
     .ready(function() {
       $('.ui.form')
         .form({
           fields: {
             nome: {
               identifier  : 'nome',
               rules: [
                 {
                   type   : 'empty',
                   prompt : 'Por favor, informe seu Nome'
                 },
                 
               ]
             },
             email: {
               identifier  : 'email',
               rules: [
                 {
                   type   : 'empty',
                   prompt : 'Por favor, informe seu Email'
                 },
                 {
                   type   : 'email',
                   prompt : 'Por favor, informe um Email valido'
                 }
               ]
             },
             telefone: {
               identifier  : 'telefone',
               rules: [
                 {
                   type   : 'empty',
                   prompt : 'Por favor, informe seu telefone'
                 },
                 
               ]
             },
             assunto: {
               identifier  : 'assunto',
               rules: [
                 {
                   type   : 'empty',
                   prompt : 'Por favor, informe o Assunto da Mensagem'
                 },
                 
               ]
             },
             mensagem: {
               identifier  : 'mensagem',
               rules: [
                 {
                   type   : 'empty',
                   prompt : 'Por favor, Digite sua Mensagem'
                 },
                 
               ]
             }
           }
         })
       ;
     })
   ;
</script>
@section custom_js {
<script>
   function onSuccess(response) {
      swal({                 
               text: 'Formulário enviado com sucesso',
               type: 'success',
               showCancelButton: false,
               confirmButtonColor: '#16ab39',
               cancelButtonColor: '#d33',
               confirmButtonText: 'OK'
           }).then(function () {
             if(operacao == "A")
                return Adicionar();
             else
                return Editar();
             });
   }
   
   function onFailure(response) {
        if (response.success == false) {               
   
           swal({
               text: 'Atenção: Houve um erro ao enviar o Formulário',
               type: 'error',
               showCancelButton: false,
               confirmButtonColor: '#16ab39',
               cancelButtonColor: '#d33',
               confirmButtonText: 'OK'
           }).then(function () {
           });
       }
   }
</script>    
}